@root {
  class "panel panel-default",
  @header {
    class "panel-heading",
    @title(h2) {
      class "panel-title",
      text $var, /* Using a variable from context */
      id "the-panel-title"
    }
  },
  @body {
    class "panel-body"
  },
  @footer {
    class "panel-footer",
    @footerButtons {
      class "btn-group",
      @closeBtn(button) {
        class "btn btn-default",
        text "Close",
        signals {
          onClose "onclick"
        }
      }
    }
  }
}